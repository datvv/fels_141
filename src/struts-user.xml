<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/user" extends="default-web">
		<action name="findByUserId*" class="springUserAction" method="findByUserId">
			<param name="user.user_id">{1}</param>
			<result name="success">User.Info</result>
			<result name="input">User.Info</result>
			<result name="error">User.Info</result>
		</action>
		<action name="findByUsername*" class="springUserAction" method="findByUsername">
			<param name="user.username">{1}</param>
			<result name="success">User.Info</result>
			<result name="error">User.Info</result>
		</action>
	</package>

	<package name="default" namespace="/" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>

		<action name="loginAction" class="springUserLoginAction"
			method="checkUserLogin">
			<result name="input">LogIn</result>
			<result name="success">HomeScreen</result>
			<result name="error">LogIn</result>
		</action>

		<action name="logoutAction" class="springUserLoginAction"
			method="logout">
			<result name="success">LogIn</result>
		</action>

		<action name="signUp" class="springUserAction" method="signUp">
			<result name="input">SignUp</result>
			<result name="success">LogIn</result>
			<result name="error">SignUp</result>
		</action>

		<action name="goToWordList" class="springHomeScreenAction"
			method="goToWordList">
			<result name="success">WordList</result>
		</action>

		<action name="goToCategories" class="springHomeScreenAction"
			method="goToCategories">
			<result name="success">Categories</result>
		</action>

		<action name="solveProblem" class="springLessonScreenAction"
			method="solveProblem">
			<result name="success">LessonScreen</result>
			<result name="error">Result</result>
		</action>

		<action name="wordlistAction" class="springWordListFilterAction"
			method="filterWordList">
			<result name="success">WordList</result>
		</action>

		<action name="showCategoriesAction" class="springCategoriesScreenAction"
			method="showCategories">
			<result name="success">CATEGORIES</result>
		</action>

		<action name="signUp" class="springUserAction" method="signUp">
			<result name="input">SignUp</result>
			<result name="success">LogIn</result>
			<result name="error">SignUp</result>
		</action>

		<action name="goToWordList" class="springHomeScreenAction"
			method="goToWordList">
			<result name="success">WordList</result>
		</action>

		<action name="goToCategories" class="springHomeScreenAction"
			method="goToCategories">
			<result name="success">Categories</result>
		</action>

		<action name="solveProblem" class="springLessonScreenAction"
			method="solveProblem">
			<result name="success">LessonScreen</result>
			<result name="error">Result</result>
		</action>
		<action name="importCSV" class="springAdminControlAction"
			method="importCSV">
			<result name="success"></result>
		</action>
	</package>
	<package name="json" namespace="/" extends="json-default">
		<action name="filterAction" class="springWordListFilterAction"
			method="filterWordList">
			<result type="json">
				<param name="excludeProperties">
					model.cacheData
				</param>
				<param name="ignoreHierarchy">false</param>
			</result>
			<result name="input" type="json">
				<param name="excludeProperties">
					model.cacheData
				</param>
				<param name="ignoreHierarchy">false</param>
			</result>
			<result name="error" type="json">
				<param name="excludeProperties">
					model.cacheData
				</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
	</package>
	<package name="admin" namespace="/admin" extends="default-web-admin">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" default="true" />
		</result-types>
		
		<action name="adminPageAction" class="springManageUserAction"
			method="adminPage">
			<result name="success">ADMIN_PAGE</result>
		</action>
		
		<action name="showListUser" class="springManageUserAction"
			method="showListUser">
			<result name="success">LIST_USER</result>
		</action>

		<action name="deleteUserAction" class="springManageUserAction"
			method="deleteUser">
			<result name="success" type="redirectAction">showListUser</result>
		</action>

		<action name="userUpdateAction" class="springManageUserAction"
			method="updateUser">
			<result name="success">UPDATE_USER</result>
		</action>

		<action name="updateAndSaveAction" class="springManageUserAction"
			method="updateAndSaveUser">
			<result name="success" type="redirectAction">showListUser</result>
		</action>
		
		<action name="manageCategoryAcion" class="springManageCategoryAction"
			method="listCategory">
			<result name="success">LIST_CATEGORY</result>
		</action>
		
		<action name="categoryUpdateAction" class="springManageCategoryAction"
			method="updateCategory">
			<result name="success">UPDATE_CATEGORY</result>
		</action>
		
		<action name="updateAndSaveCategory" class="springManageCategoryAction"
			method="updateAndSaveCategory">
			<result name="success" type="redirectAction">manageCategoryAcion</result>
		</action>
		
		<action name="addCategoryAction" class="springManageCategoryAction"
			method="addCategory">
			<result name="success">ADD_CATEGORY</result>
		</action>
		
		<action name="addAndSaveCategoryAction" class="springManageCategoryAction"
			method="addAndSaveCategory">
			<result name="success" type="redirectAction">manageCategoryAcion</result>
		</action>
		
		<action name="deleteCategoryAction" class="springManageCategoryAction"
			method="deleteCategory">
			<result name="success" type="redirectAction">manageCategoryAcion</result>
		</action>
		
	</package>
</struts>
