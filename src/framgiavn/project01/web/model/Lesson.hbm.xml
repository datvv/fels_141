<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="framgiavn.project01.web.model.Lesson" table="Lesson">
		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="increment" />
		</id>
		<property name="userId" type="java.lang.Integer">
			<column name="user_id" />
		</property>
		<property name="categoryId" type="java.lang.Integer">
			<column name="category_id" />
		</property>
		<property name="result" type="java.lang.Integer">
			<column name="result" />
		</property>
	</class>
	<query name="Lesson.getResultById">
		select result
		from Lesson lesson
		where lesson.id=
		:id
	</query>
	<query name="Lesson.setResultById">
		update Lesson
		set result=:newResult
		where id=:lesson_id 
	</query>
</hibernate-mapping>
