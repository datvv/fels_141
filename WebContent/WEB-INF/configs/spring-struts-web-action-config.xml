<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- ================== USER MODULE ================== -->
	<bean id="springUserAction" class="framgiavn.project01.web.action.UserAction">
		<property name="userBusiness" ref="UserBusiness" />
	</bean>
	<bean id="springUserLoginAction" class="framgiavn.project01.web.action.UserLoginAction">
		<property name="userBusiness" ref="UserBusiness" />
	</bean>

	<bean id="springHomeScreenAction" class="framgiavn.project01.web.action.HomeScreenAction">
		<property name="userBusiness" ref="UserBusiness" />
	</bean>

	<bean id="springWordListFilterAction" class="framgiavn.project01.web.action.WordListFilterAction">
		<property name="categoryBusiness" ref="CategoryBusiness" />
		<property name="wordCategoryBusiness" ref="WordCategoryBusiness" />
	</bean>

	<bean id="springLessonScreenAction" class="framgiavn.project01.web.action.LessonScreenAction">
		<property name="userBusiness" ref="UserBusiness" />
		<property name="lessonBusiness" ref="LessonBusiness" />
		<property name="lessonWordBusiness" ref="LessonWordBusiness" />
	</bean>
	<bean id="springCategoriesScreenAction" class="framgiavn.project01.web.action.CategoriesScreenAction">
		<property name="lessonCategoryBusiness" ref="LessonCategoryBusiness" />
	</bean>
</beans>